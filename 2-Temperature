#include<iostream>
#include<conio.h>
using namespace std;
int main()
{
	float temp[7][3];
	int i;
	cout << "Enter temperatures for Province A" << endl;
	for (i = 0; i < 7; i++)
		cin >> temp[i][1];

	cout << "Enter temperatures for Province B" << endl;
	for (i = 0; i < 7; i++)
		cin >> temp[i][2];

	cout << "Enter temperatures for Province C" << endl;
	for (i = 0; i < 7; i++)
		cin >> temp[i][3];

	for (i = 0; i < 7; i++)
		cout << "Province A, Day " << i + 1 << " = " << temp[i][1] << endl;

	for (i = 0; i < 7; i++)
		cout << "Province B, Day " << i + 1 << " = " << temp[i][2] << endl;

	for (i = 0; i < 7; i++)
		cout << "Province C, Day " << i + 1 << " = " << temp[i][3] << endl;
	_getch();
	return 0;
}
