#include<iostream>
#include<conio.h>

using namespace std;
int main()
{
	int num[10];
	int i, maxI, minI, smallest, largest;
	double ave, sum;

	cout << "Enter 10 integers" << endl;
	for (i = 0; i < 10; i++)
		cin >> num[i];

	maxI = 0;
	for (i = 0; i < 10; i++)
		if (num[maxI] < num[i])
			maxI = i;
	largest = num[maxI];
	cout << "The largest among the integers is " << largest << endl;

	minI = 0;
	for (i = 0; i < 10; i++)
		if (num[minI] > num[i])
			minI = i;
	smallest = num[minI];
	cout << "The smallest among the integers is " << smallest << endl;

	sum = 0;
	for (i = 0; i < 10; i++)
		sum = sum + num[i];

	ave = sum / 10;

	cout << "The sum of all the integers is " << sum << endl;
	cout << "The average of all the integers is " << ave << endl;

	_getch();
	return 0;
}
